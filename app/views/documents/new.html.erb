<h1 class="text-3xl font-bold text-center mb-3">DocuShare</h1>
<h2 class="text-center text-slate-300">Get an easy to share link by uploading your file here.</h2>

<%= form_with model: @document, class: "bg-white rounded-lg mx-20 mt-5 text-slate-900 flex flex-col p-4" do |form| %>
  <%= form.label :file, "Document:" %>
  <%= form.file_field :file, class: "file:mr-4 file:py-2 file:px-4
      file:rounded-full file:border-0
      file:text-sm file:font-semibold
      file:bg-sky-50 file:text-sky-700
      hover:file:bg-sky-100" %>
  <%= form.submit "Create link", class: "bg-sky-600 hover:bg-sky-600/80 rounded-full w-fit py-1 px-5 m-auto text-white font-bold" %>
<% end %>
