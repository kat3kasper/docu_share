<% if @documents %>
  <h2 class="text-lg text-slate-900">Documents</h2>
  <ul>
    <% @documents.each do |document| %>
      <li data-controller="clipboard" class= "mt-3">
        <%= link_to document do %>
          <%= document.file.filename %>
        <% end %>

        <span class="hidden" data-clipboard-target="source"><%= share_document_url(shared_id: document.shared_id) %></span>
        <button data-action="clipboard#copy" data-clipboard-target="button" class="btn-secondary text-sm">Copy shared link</button>
      </li>
    <% end %>
  </ul>
<% else %>
  <h2 class="text-center text-lg text-slate-600">No documents found for this user.</h2>
<% end %>

<div class="m-auto mt-10 text-center">
  <%= button_to "+ Create new link", new_document_path, method: :get, class: "btn-success" %>
</div>