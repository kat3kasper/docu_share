<% if @documents %>
  <h2 class="text-lg text-slate-900">Documents</h2>
  <ul>
    <% @documents.each do |document| %>
      <li class= "mt-3 text-blue-600">
        <%= link_to document do %>
          <%= document.file.filename %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h2 class="text-center text-lg text-slate-600">No documents found for this user.</h2>
<% end %>

<div class="m-auto text-center">
  <%= button_to "+ Create new link", new_document_path, method: :get, class: "btn-success" %>
</div>